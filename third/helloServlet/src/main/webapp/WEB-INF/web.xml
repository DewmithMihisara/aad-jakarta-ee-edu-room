<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>lk.ijse.helloservlet.HelloServlet</servlet-class>
        <init-param>
            <param-name>city</param-name>
            <param-value>Galle</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>lk.ijse.helloservlet.NewServlet</servlet-class>
        <init-param>
            <param-name>city</param-name>
            <param-value>Colombo</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/new2</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>userName</param-name>
        <param-value>Dew</param-value>
    </context-param>
</web-app>